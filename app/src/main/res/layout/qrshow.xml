<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="io.securypto.dsgv1.qrshow" >



    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:foregroundGravity="center"

        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"

        />




    <ImageButton
        android:id="@+id/button_share1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="shareimage"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@layout/xml_buttonpointtotop"

        android:src="@mipmap/whats_app_gmail"
        android:padding="10dp"
        android:scaleType="fitXY"

        />

    <ImageButton
        android:id="@+id/button_share2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="sharedsgfile"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@layout/xml_buttonpointtotop"

        android:src="@mipmap/whats_app_gmail"
        android:padding="10dp"
        android:scaleType="fitXY"

        />

    <ImageButton
        android:id="@+id/button_share_by_scu"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@layout/xml_buttonpointtotop"
        android:onClick="share_by_scu"
        android:padding="10dp"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:scaleType="fitXY"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:src="@mipmap/sculogo"

         />


    <Button
        android:id="@+id/Button_Return1"
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:layout_alignBottom="@+id/videoView"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@layout/xml_buttonpointtotop"
        android:onClick="gotologinsuccespage"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/Return"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />
    1


    <ImageView
        android:id="@+id/qrholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:foregroundGravity="center"

        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
 />


    <TextView
        android:id="@+id/textqrcounter"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        android:gravity="center"
        android:text="QR 1/1"
        android:textColor="#FFFFFF"

        />

</RelativeLayout>